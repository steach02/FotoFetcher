<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.cameraactivity.PhotoSelection">
    <TextView
        android:id="@+id/TextView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Home!" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/photo_select_twitter_profile_image"
        android:layout_below="@+id/TextView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/photo_select_twitter_username_text_view"
        android:layout_toRightOf="@+id/photo_select_twitter_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <Button
        android:id="@+id/GotoCamera"
        android:text="Go To Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToTheCamera"
        android:layout_below="@+id/TextView3"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/GotoGallery"
        android:text="Select from Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/GotoCamera"
        android:layout_alignParentRight="true"
        android:onClick="goToTheGallery"/>

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Upload"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/black"/>

</RelativeLayout>
